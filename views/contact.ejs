        <input style="margin-left: 150px; margin-top:60px;" type="text" name="name" id="name" placeholder="Name"><br><br>
        <input style="margin-left: 150px; margin-top:10px;" type="text" name="email" id="email" placeholder="Email"><br><br>
        <input style="margin-left: 150px; margin-top:10px;" type="text" name="message" id="message" placeholder="Message"><br><br>
        <input style="margin-left: 220px; margin-top:10px;" type="submit" name="submit" id="submit">
      </form>
    </div>
  </div>